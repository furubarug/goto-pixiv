{
  "name": "goto-pixiv",
  "version": "1.0.0",
  "description": "Bookmarklet to go from FANBOX to pixiv.",
  "main": "goto-pixiv.ts",
  "scripts": {
    "build": "webpack && node build-readme",
    "lint": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/furubarug/goto-pixiv.git"
  },
  "author": "furubarug",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/furubarug/goto-pixiv/issues"
  },
  "homepage": "https://github.com/furubarug/goto-pixiv#readme",
  "devDependencies": {
    "@neos21/bookmarkletify": "^0.0.3",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1",
    "ts-loader": "^9.2.5",
    "typescript": "^4.3.5",
    "webpack": "^5.49.0",
    "webpack-cli": "^4.7.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "eslint-config-airbnb-typescript/base",
      "eslint-config-prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "plugins": [
      "@typescript-eslint",
      "eslint-plugin-import",
      "eslint-plugin-prettier"
    ],
    "ignorePatterns": "**/*.js",
    "rules": {
      "@typescript-eslint/consistent-type-assertions": "error",
      "@typescript-eslint/no-use-before-define": "off",
      "import/order": "error",
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "useTabs": true,
    "tabWidth": 2,
    "arrowParens": "always",
    "singleQuote": true,
    "quoteProps": "as-needed",
    "endOfLine": "lf",
    "printWidth": 100
  }
}
